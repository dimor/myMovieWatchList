<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_watch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dima.simple_watch_library.WatchActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp">

                <TextView
                    android:text="@string/NotAvalibale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/movieNameTV"
                    android:textSize="24sp"
                    android:textStyle="normal|bold"
                    style="@android:style/Widget.DeviceDefault.TextView"
                    android:fontFamily="sans-serif-condensed"
                    android:textAlignment="center"
                    android:layout_gravity="center" />

                <ImageView
                    android:layout_width="300dp"
                    app:srcCompat="@drawable/noimage"
                    android:id="@+id/moviePosterIV"
                    android:padding="5dp"
                    android:elevation="0dp"
                    android:background="@drawable/borders"
                    android:layout_height="300dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    tools:ignore="ContentDescription,UnusedAttribute" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@drawable/borders">


                    <ImageView
                        app:srcCompat="@drawable/imdb"
                        android:id="@+id/imageView3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:text="@string/NotAvalibale"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/movieImdbRatingTV"
                        android:textAlignment="center"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:layout_gravity="center" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@drawable/borders">


                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/myrating"
                        android:id="@+id/myRatingIB"
                        android:layout_gravity="center"
                        style="@android:style/Widget.DeviceDefault.Light.ImageButton"
                        android:layout_margin="5dp"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:text="@string/NotAvalibale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/myMovieRatingTV"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:layout_margin="5dp"
                        android:layout_gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@drawable/borders">


                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@android:drawable/ic_menu_view"
                        android:id="@+id/isMovieWatchedIB"
                        android:layout_gravity="center"
                        style="@style/Widget.AppCompat.ImageButton"
                        android:layout_margin="5dp"
                        android:background="@color/unWatched"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:text="@string/WatchStatusFalse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/isMovieWatched"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:layout_margin="5dp"
                        android:layout_gravity="center" />

                </LinearLayout>



            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/borders">

                <TextView
                    android:text="@string/PlotMovie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:padding="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/moviePlotTV"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/NotAvalibale" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/borders">

                <TextView
                    android:text="@string/MovieInformation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:padding="5dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/MovieInfoTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView5"
                        android:textStyle="bold"
                        android:padding="5dp" />

                    <TextView
                        android:text="@string/NotAvalibale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/movieInformationTitleTV"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:layout_gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/MovieInfoYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:text="@string/NotAvalibale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:id="@+id/movieYearTV" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/MovieInfoRated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:padding="5dp" />

                    <TextView
                        android:text="@string/NotAvalibale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:id="@+id/movieRatedTV" />
                </LinearLayout>

                <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/MovieInfoReleased"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                  android:padding="5dp" />

                <TextView
                    android:text="@string/NotAvalibale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:id="@+id/movieReleasedTV" />
            </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/MovieInfoRuntime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:padding="5dp" />

                    <TextView
                        android:text="@string/NotAvalibale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:id="@+id/movieRuntimeTV" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/MovieInfoGenre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:padding="5dp" />

                    <TextView
                        android:text="@string/NotAvalibale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:id="@+id/movieGenreTV" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/MovieInfoDirector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:padding="5dp" />

                    <TextView
                        android:text="@string/NotAvalibale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:id="@+id/movieDirectorTV" />
                </LinearLayout>








            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/borders"
                android:weightSum="2">

                <Button
                    android:text="@string/cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/movieCancelBtn"
                    tools:ignore="ButtonStyle"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:layout_margin="5dp" />

                <Button
                    android:text="@string/MovieWatchAddBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/movieSaveBtn"
                    tools:ignore="ButtonStyle"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:layout_margin="5dp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>