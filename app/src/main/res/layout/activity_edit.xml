<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dima.my_movie_watch_list.WatchActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:soundEffectsEnabled="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp">

                <EditText
                    android:hint="Movie Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/MovieNameET"
                    android:textSize="24sp"
                    android:textStyle="normal|bold"
                    style="@style/Widget.AppCompat.EditText"
                    android:fontFamily="sans-serif-condensed"
                    android:textAlignment="center"
                    android:layout_gravity="center" />

                <ImageView
                    android:layout_width="300dp"
                    app:srcCompat="@drawable/noimage"
                    android:id="@+id/moviePosterIV"
                    android:padding="5dp"
                    android:background="@drawable/borders"
                    android:layout_height="300dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center" />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/borders">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textUri"
                    android:ems="10"
                    android:id="@+id/urlET"
                    android:hint="@string/url"
                    android:layout_weight="1" />

                <Button
                    android:text="@string/show"
                    android:layout_height="match_parent"
                    android:id="@+id/showBtn"
                    android:layout_width="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@drawable/borders">


                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/myrating"
                        android:id="@+id/myRatingIB" />

                    <TextView
                        android:text="Set Rating"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/myRatingTV"
                        android:gravity="center"
                        android:layout_margin="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@drawable/borders">


                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@android:drawable/ic_menu_view"
                        android:id="@+id/isEditMovieWatchedIB"
                        android:layout_gravity="center"
                        style="@android:style/Widget.DeviceDefault.ImageButton"
                        android:layout_margin="5dp"
                        android:background="@android:color/darker_gray" />

                    <TextView
                        android:text="Unwatched"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/isEditMovieWatchedTV"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:layout_margin="5dp"
                        android:layout_gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@drawable/borders">


                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@android:drawable/ic_menu_camera"
                        android:id="@+id/cameraIB"
                        android:layout_gravity="center"
                        style="@android:style/Widget.DeviceDefault.ImageButton"
                        android:layout_margin="5dp"
                       />

                    <TextView
                        android:text="Camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cameraTV"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:layout_margin="5dp"
                        android:layout_gravity="center" />

                </LinearLayout>


            </LinearLayout>



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/borders">

                <TextView
                    android:text="Plot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:padding="5dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/moviePlotET"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:padding="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/borders">

                <TextView
                    android:text="Information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:padding="5dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView5"
                        android:textStyle="bold"
                        android:padding="5dp" />

                    <EditText
                        android:hint="title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/movieInformationTitleET"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:layout_gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textStyle="bold" />

                    <EditText
                        android:hint="year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:id="@+id/movieYearET" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Rated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:padding="5dp" />

                    <EditText
                        android:hint="rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:id="@+id/movieRatedET" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Released"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:padding="5dp" />

                    <EditText
                        android:hint="Released"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:id="@+id/movieReleasedET" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Runtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:padding="5dp" />

                    <EditText
                        android:hint="runtime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:id="@+id/movieRuntimeET" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Genre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:padding="5dp" />

                    <EditText
                        android:hint="genre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:id="@+id/MovieGenreET" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Director"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:padding="5dp" />

                    <EditText
                        android:hint="Director"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:id="@+id/movieDirectorET" />
                </LinearLayout>








            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/borders"
                android:weightSum="2">

                <Button
                    android:text="@string/cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/movieEditCancelBtn"
                    tools:ignore="ButtonStyle"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:layout_margin="5dp" />

                <Button
                    android:text="add"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/movieEditSaveBtn"
                    tools:ignore="ButtonStyle"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:layout_margin="5dp" />
            </LinearLayout>

